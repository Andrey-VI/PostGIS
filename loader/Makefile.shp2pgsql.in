PROGRAM=shp2pgsql

# List of objects to build
OBJS=	shpopen.o \
	dbfopen.o \
	getopt.o \
	shp2pgsql.o

# Link against libiconv where available
PG_LIBS=@ICONV_LDFLAGS@

# PGXS information
PG_CONFIG = @PGCONFIG@ 
PGXS := $(shell $(PG_CONFIG) --pgxs)
include $(PGXS)

