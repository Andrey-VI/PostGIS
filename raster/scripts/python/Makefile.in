CP = cp -p

# Filenames with extension as determined by the OS
GDAL2RASTER=gdal2raster.py

# PostgreSQL executable directory
PGSQL_BINDIR=@PGSQL_BINDIR@

all:

install:
	$(CP) $(GDAL2RASTER) $(PGSQL_BINDIR)/$(GDAL2RASTER)

uninstall:
	$(RM) $(PGSQL_BINDIR)/$(GDAL2RASTER)

clean:
	$(RM) *.o
